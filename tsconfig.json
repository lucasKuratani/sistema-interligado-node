{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "target": "es2017",
    "rootDir": "./src",
    "outDir": "./lib",
    "declaration": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./src/**/*"]
}
